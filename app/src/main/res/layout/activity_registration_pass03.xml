<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".ActivityRegistrationPass03">

    <ImageView
        android:id="@+id/iv_screen_title"
        style="@style/CapivaraTheme.BaseView"
        android:layout_marginTop="16dp"
        android:src="@drawable/screen_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_signin"
        style="@style/CapivaraTheme.ScreenTitle"
        android:layout_marginTop="28dp"
        android:text="Registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_screen_title" />

    <EditText
        android:id="@+id/et_capybara_name"
        style="@style/CapivaraTheme.EditTextNormal"
        android:layout_marginTop="32dp"
        android:hint="Capybara' name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_screen_title" />

    <TextView
        android:id="@+id/tv_capybara_name"
        style="@style/CapivaraTheme.BaseView"
        android:text="*Please! Give a nice name ;)"
        app:layout_constraintEnd_toEndOf="@+id/et_capybara_name"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_capybara_name" />

    <ImageView
        android:id="@+id/iv_capybara_icon"
        style="@style/CapivaraTheme.BaseView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/capii_player_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_capybara_name" />

    <LinearLayout
        android:id="@+id/ll_color_area_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_capybara_winner">

        <Button
            android:id="@+id/bt_color_black"
            style="@style/CapivaraTheme.ButtonCapiiColor"

            android:background="@drawable/button_capii_color_black" />

        <Button
            android:id="@+id/bt_color_blue"
            style="@style/CapivaraTheme.ButtonCapiiColor"
            android:layout_marginLeft="24dp"
            android:background="@drawable/button_capii_color_blue" />

        <Button
            android:id="@+id/bt_color_brown"
            style="@style/CapivaraTheme.ButtonCapiiColor"
            android:layout_marginLeft="24dp"
            android:background="@drawable/button_capii_color_brown" />

        <Button
            android:id="@+id/bt_color_green"
            style="@style/CapivaraTheme.ButtonCapiiColor"
            android:layout_marginLeft="24dp"
            android:background="@drawable/button_capii_color_green" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_color_area_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_color_area_1">

        <Button
            android:id="@+id/bt_color_pink"
            style="@style/CapivaraTheme.ButtonCapiiColor"
            android:layout_marginLeft="24dp"
            android:background="@drawable/button_capii_color_pink" />

        <Button
            android:id="@+id/bt_color_purple"
            style="@style/CapivaraTheme.ButtonCapiiColor"
            android:layout_marginLeft="24dp"
            android:background="@drawable/button_capii_color_purple" />

        <Button
            android:id="@+id/bt_color_red"
            style="@style/CapivaraTheme.ButtonCapiiColor"
            android:layout_marginLeft="24dp"
            android:background="@drawable/button_capii_color_red" />

        <Button
            android:id="@+id/bt_color_white"
            style="@style/CapivaraTheme.ButtonCapiiColor"
            android:layout_marginLeft="24dp"
            android:background="@drawable/button_capii_color_white" />

        <Button
            android:id="@+id/bt_color_yellow"
            style="@style/CapivaraTheme.ButtonCapiiColor"
            android:layout_marginLeft="24dp"
            android:background="@drawable/button_capii_color_yellow" />

    </LinearLayout>


    <Button
        android:id="@+id/bt_back"
        style="@style/CapivaraTheme.ButtonBackNext"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_back"
        android:onClick="buttonBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_next"
        style="@style/CapivaraTheme.ButtonBackNext"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_next"
        android:onClick="buttonSaveRegister"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>